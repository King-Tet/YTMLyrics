{
  "manifest_version": 3,
  "name": "YTM Synced Lyrics",
  "version": "1.0",
  "description": "Adds synced lyrics from LRCLIB to YouTube Music.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "https://lrclib.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png", 
    "48": "icon.png",
    "128": "icon.png"
  }
}