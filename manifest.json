{
  "manifest_version": 3,
  "name": "YTM Ultimate Lyrics",
  "version": "2.1",
  "permissions": [
    "scripting",
    "storage",
    "tabCapture", 
    "offscreen"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "https://lrclib.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}