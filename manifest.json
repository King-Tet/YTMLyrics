{
  "manifest_version": 3,
  "name": "YTM Ultimate Lyrics",
  "version": "2.3",
  "permissions": [
    "scripting",
    "storage",
    "tabCapture",
    "offscreen",
    "activeTab" 
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "https://lrclib.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YTM Lyrics Settings"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}